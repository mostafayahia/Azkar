<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="free.eltayeb.azkar"
    android:versionCode="28"
    android:versionName="3.31" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="free.eltayeb.azkar.AzkarEntry"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Azkar" 
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Reiterating"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape"></activity>
        <activity android:name="free.eltayeb.azkar.Settings"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>
